page {
    background-color: gainsboro;
}

.topContainer {
    margin: 10rpx auto;
    padding: 50rpx 0;
    display: flex;
    height: 200rpx;
    width: 96vw;
    border-radius: 20rpx;
    background-color: white;
    align-items: center;
}

.headImg {
    width: 200rpx;
    height: 200rpx;
    margin-left: 30rpx;
    overflow: hidden;
}

.headImg image {
    width: 100%;
    border-radius: 10rpx;
}

.right {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.title {
    flex: 3;
    width: 440rpx;
    /* margin-bottom: 40rpx; */
    /* height: 140rpx; */
    font-size: 40rpx;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.price {
    color: red;
    margin: 20rpx 0;
    text-align: right;
    padding-right: 10rpx;
}

.priceOperate {
    flex: 1;
    display: flex;
}

.leftWords {
    flex: 1;
}

.rightContainer {
    display: flex;
    flex: 1;
}

.operateBtnL {
    width: 52rpx;
    height: 50rpx;
    text-align: center;
    border: rgb(223, 223, 223) solid 2rpx;
    line-height: 50rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.operateBtnR {
    width: 52rpx;
    height: 50rpx;
    text-align: center;
    border: rgb(223, 223, 223) solid 2rpx;
    line-height: 50rpx;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.number {
    text-align: center;
    width: 100rpx;
    height: 50rpx;
    border-top: rgb(223, 223, 223) solid 2rpx;
    border-bottom: rgb(223, 223, 223) solid 2rpx;
}

.bottom {
    background-color: white;
    border-radius: 20rpx;
    height: 778rpx;
    width: 96vw;
    overflow: hidden;
}

.beizhu {
    border: rgb(223, 223, 223) solid 2rpx;
    height: 130rpx;
    border-radius: 10rpx;
    padding: 15rpx;
}

.fixContainer {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 100rpx;
    width: 100vw;
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.submitBtn {
    margin: 0 20rpx 0 0;
    height: 80rpx;
    line-height: 80rpx;
    background-color: var(--themeColor);
    color: white;
}

.titlePrice {
    margin-left: 240rpx;
}

.hover {
    background-color: rgb(190, 190, 190);
}

.time {
    width: 450rpx;
    height: 48rpx;
}

.notice {
    margin-right: 10rpx;
}