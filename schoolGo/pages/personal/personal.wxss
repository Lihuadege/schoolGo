page {
    margin: 0;
    padding: 0;
}

.headContainer {
    background-image: url('http://localhost:8081/images/beijing2.png');
    background-size: 100% auto;
    background-repeat: no-repeat;
    height: 300rpx;
    width: 750rpx;
    display: flex;
    flex-direction: row;
}

.headContainer image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: #dfdfdd solid 10rpx;
    margin: 50rpx;
}

.rightContainer {
    height: 300rpx;
    width: 450rpx;
}

.rightContainer .nikeName {
    margin-top: 80rpx;
    font-weight: bold;
    font-size: 50rpx;
}

.rightContainer .personalized {
    font-weight: 300;
    font-size: 35rpx;
    color: #d4df31;
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.loginBtn {
    width: 280rpx;
    height: 80rpx;
    background-color: greenyellow;
    margin: auto auto;
}

.space {
    width: 750rpx;
    height: 10rpx;
    background-color: #F4F5F9;
}

.line {
    width: 100%;
    height: 1px;
    background-color: #EEEEEE;
}

.navContainer {
    display: flex;
    flex-direction: row;
    text-align: center;
    width: 750rpx;
    background-color: #F4F5F9;
}

.navItem {
    width: 178rpx;
    height: 178rpx;
    background-color: rgb(255, 255, 255);
    border: rgb(84, 199, 170) solid 3rpx;
    margin: 10rpx 6rpx 10rpx 6rpx;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.myfont {
    color: rgb(96, 177, 244);
    flex: 4;
    font-size: 80rpx;
    width: 100rpx;
    height: 100rpx;
    line-height: 150rpx;
}

.text {
    flex: 1;
}

.menuItem {
    width: 100vw;
    height: 104rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.menuItem .name {
    margin-left: 32rpx;
    font-size: 34rpx;
    color: #333;
    line-height: 104rpx;
}

.menuItem .next {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

van-cell {
    width: 100vw;
}