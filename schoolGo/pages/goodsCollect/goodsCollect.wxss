.container {
    margin: 0;
    padding: 0;
}

.container:first-child {
    margin-top: 10rpx;
    border-top: rgb(233, 51, 51) solid 2rpx;
}

.goodsItem {
    border-bottom: rgb(233, 51, 51) solid 2rpx;
    width: 100vw;
    display: flex;
    height: 300rpx;
    align-items: center;
}

.imgContainer {
    width: 280rpx;
    height: 280rpx;
    overflow: hidden;
    margin-left: 20rpx;
}

.img {
    width: 100%;
    border-radius: 20rpx;
}

.rightDesc {
    display: flex;
    flex-direction: column;
    margin-right: 20rpx;
    margin-left: 40rpx;
    width: 380rpx;
}

.title {
    font-size: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    height: 140rpx;
}

.price {
    color: red;
    height: 60rpx;
    margin-top: 60rpx;
}

.boldPrice {
    font-size: 40rpx;
}