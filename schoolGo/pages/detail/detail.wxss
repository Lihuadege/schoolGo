/* pages/detail/detail.wxss */

.scollArea {
    /* height: 1106rpx; */
    height: 93%;
}

.headContainer {
    /* background-color: pink; */
    height: 120rpx;
    width: 100vw;
    display: flex;
    flex-direction: row;
}

.touxiang {
    height: 80rpx;
    width: 80rpx;
    border-radius: 50%;
    margin: 20rpx 15rpx 20rpx 35rpx;
}

.rightContainer {
    height: 120rpx;
    width: 450rpx;
    padding-left: 10rpx;
    font-weight: bold;
    font-size: 35rpx;
    margin-top: 30rpx;
}

.fuhao {
    font-size: 20rpx;
}

.line {
    height: 3rpx;
    width: 96vw;
    background-color: #F4F5F9;
}

.price {
    width: 100vw;
    text-align: left;
    padding-left: 35rpx;
    color: red;
    margin: 20rpx 0;
}

.describe {
    padding: 0 35rpx;
    font-size: 34rpx;
}

.imageContainer {
    padding: 0 35rpx;
    margin-top: 20rpx;
}

.imageContainer image {
    width: 680rpx;
}

.iconfont {
    font-size: 40rpx;
    height: 44rpx;
}

.myFont {
    color: var(--themeColor);
}

.buttomView {
    width: 100vw;
    height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: white;
    display: flex;
    flex-direction: row;
    border-top: 1rpx solid rgb(218, 212, 212);
}

.toolItem {
    flex: 1;
    text-align: center;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.blank {
    flex: 2;
}

.buy_btn {
    margin-top: 10rpx;
    margin-right: 10rpx;
    height: 80rpx;
    flex: 2;
    background-color: rgb(235, 84, 38);
    font-size: 35rpx;
    border-radius: 14rpx;
}